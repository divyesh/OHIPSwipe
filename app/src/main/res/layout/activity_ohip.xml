<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ohipActivity">

    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/info"
        android:textAlignment="center"
        android:textSize="22dp" />
    <EditText
        android:id="@+id/ohipText"
        android:inputType="number"
        android:maxLength="14"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoTxt"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/goBtn"
        style="@style/numPad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ohipText"
        android:text="@string/go" />

    <TableLayout
        android:id="@+id/standard_functions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goBtn"
        android:gravity="center"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/TableRowBackground"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/one"
                style="@style/numPad"
                android:text="@string/one" />

            <Button
                android:id="@+id/two"
                style="@style/numPad"
                android:text="@string/two" />

            <Button
                android:id="@+id/three"
                style="@style/numPad"
                android:text="@string/three" />


        </TableRow>


        <TableRow
            android:id="@+id/tableRow1"
            style="@style/TableRowBackground"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/four"
                style="@style/numPad"
                android:text="@string/four" />

            <Button
                android:id="@+id/five"
                style="@style/numPad"
                android:text="@string/five" />

            <Button
                android:id="@+id/six"
                style="@style/numPad"
                android:text="@string/six" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow0"
            style="@style/TableRowBackground"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/seven"
                style="@style/numPad"
                android:text="@string/seven" />

            <Button
                android:id="@+id/eight"
                style="@style/numPad"
                android:text="@string/eight" />

            <Button
                android:id="@+id/nine"
                style="@style/numPad"
                android:text="@string/nine" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/TableRowBackground"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/clearBtn"
                style="@style/numPad"
                android:text="@string/clear" />

            <Button
                android:id="@+id/zero"
                style="@style/numPad"
                android:text="@string/zero" />

            <Button
                android:id="@+id/deleteBtn"
                style="@style/numPad"
                android:text="@string/delete" />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/errorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="42dp"
        android:layout_below="@+id/standard_functions"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/infoToken" />
    <TextView
        android:id="@+id/infoToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/standard_functions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="@string/token"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/token"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/standard_functions"
        android:layout_below="@+id/infoToken"
        android:gravity="center"
        android:text="150"
        android:textAlignment="center"
        android:textSize="130dp" />

    <TextView
        android:id="@+id/waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/token"
        android:layout_centerHorizontal="true"
        android:text="@string/waitTime"
        android:textAlignment="center"
        android:textSize="30dp" />
</RelativeLayout>
